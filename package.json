{
  "name": "publint-monorepo",
  "private": true,
  "type": "module",
  "author": "Bjorn Lu",
  "license": "MIT",
  "scripts": {
    "lint": "prettier **/*.{js,ts,css,md,svelte} --check --cache",
    "format": "prettier **/*.{js,ts,css,md,svelte} --write --cache",
    "typecheck": "tsc",
    "test": "pnpm --dir pkg test"
  },
  "packageManager": "pnpm@8.5.1",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@types/node": "^18.16.12",
    "@types/pnpapi": "^0.0.2",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.0",
    "svelte": "^3.59.1",
    "typescript": "^5.0.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "vite": "*"
      }
    }
  }
}